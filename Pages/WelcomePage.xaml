<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.WelcomePage"
             NavigationPage.HasNavigationBar="False">



    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Image
                x:Name="LogoImage"
                Source="logo.jpg"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="200" />

            <Label Text="Welkom bij Truth Or Drink"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Button 
                Text="Maak Account" 
                Style="{StaticResource SelectButtonStyle}" 
                Clicked="NavigateToSignup" />

            <Button 
                Text="Speel als Host" 
                Style="{StaticResource SelectButtonStyle}" 
                Clicked="NavigateToHost" />

            <Button 
                Text="Speel als Deelnemer" 
                Style="{StaticResource SelectButtonStyle}" 
                Clicked="NavigateToParticipant" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
