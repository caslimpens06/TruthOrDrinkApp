<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.GameHostPage"
             Title="QR Code Generator"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout 
                   Spacing="25" 
                   Padding="30,0"
                   VerticalOptions="Center">

            <Label x:Name="GameCodeLabel"
                   Text="Gamecode: "
                   FontSize="30"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"/>

            <Image
                    x:Name="QrCodeImage"
                    HeightRequest="400"
                    WidthRequest="400"/>

            <Button 
                    Text="Speel" 
                    WidthRequest="200"
                    HeightRequest="50"
                    BackgroundColor="SkyBlue"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="ButtonPlay_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
