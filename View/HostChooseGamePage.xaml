<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.HostChooseGamePage"
             NavigationPage.HasBackButton="True">

    <VerticalStackLayout Padding="20">
        <Label Text="Choose Game" FontSize="24" HorizontalOptions="Center"/>
        <Button Text="Game 1" Command="{Binding NavigateToGame1Command}"/>
        <Button Text="Game 2" Command="{Binding NavigateToGame2Command}"/>
        <Button Text="Game 3" Command="{Binding NavigateToGame3Command}"/>
        <Button Text="Game 4" Command="{Binding NavigateToGame4Command}"/>
        <Button Text="Game 5" Command="{Binding NavigateToGame5Command}"/>
        <Button Text="Leave Game" Command="{Binding LeaveGameCommand}"/>
    </VerticalStackLayout>
</ContentPage>