<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Pages.OfflineGamePage">

    <StackLayout Padding="20">
        <Label Text="Choose a Game Session" FontSize="32" HorizontalOptions="Center" />

        <Button Text="Join Game 1" Command="{Binding JoinGame1Command}" />
        <Button Text="Join Game 2" Command="{Binding JoinGame2Command}" />
        <Button Text="Join Game 3" Command="{Binding JoinGame3Command}" />
        <Button Text="Join Game 4" Command="{Binding JoinGame4Command}" />
        <Button Text="Join Game 5" Command="{Binding JoinGame5Command}" />

        <Button Text="Leave Game" Command="{Binding LeaveGameCommand}" />
    </StackLayout>
</ContentPage>