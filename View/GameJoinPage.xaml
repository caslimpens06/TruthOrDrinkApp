<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.GameJoinPage"
             NavigationPage.HasBackButton="True">

    <ScrollView>
        <VerticalStackLayout Style="{StaticResource StandardSpacing}">
            <Label Text="Game Join" Style="{StaticResource BoldTitleText}"/>
            <Label Text="{Binding GameCode}" Style="{StaticResource StandardLabel}"/>
            <Image Source="{Binding QrCodeImage}" Style="{StaticResource QRScanWindow}"/>
            <Button Text="Play" Command="{Binding PlayCommand}" IsEnabled="{Binding IsPlayButtonEnabled}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>