<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Pages.WaitOnHostPage"
             NavigationPage.HasBackButton="False">

    <VerticalStackLayout Style="{StaticResource StandardSpacing}">

        <Label
            Text="Wachten totdat de host het spel start..."
            Style="{StaticResource SelectButtonStyle}"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Opacity="{Binding WaitingLabelOpacity}" />

        <Button 
            Text="Verlaat spel"
            Style="{StaticResource LeaveGameButtonStyle}"
            Command="{Binding LeaveGameCommand}"
            HorizontalOptions="Center"
            VerticalOptions="End" />

    </VerticalStackLayout>
</ContentPage>