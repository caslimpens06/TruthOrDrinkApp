<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.GuestIdentifierPage"
             BackgroundColor="White"
             NavigationPage.HasBackButton="True">

    <VerticalStackLayout Padding="20">
        <Label Text="Guest Identifier" FontSize="24" HorizontalOptions="Center"/>
        <Entry x:Name="NameEntry" Placeholder="Enter your name"/>
        <Label Text="Choose your gender:"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Male" Command="{Binding ChooseMaleCommand}"/>
            <Button Text="Female" Command="{Binding ChooseFemaleCommand}"/>
        </StackLayout>
        <Button Text="Continue" Command="{Binding ContinueCommand}"/>
    </VerticalStackLayout>
</ContentPage>