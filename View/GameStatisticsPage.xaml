<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Pages.GameStatisticsPage"
             NavigationPage.HasBackButton="True">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Game Statistics" FontSize="24" HorizontalOptions="Center"/>
            <Label Text="{Binding TruthLabel}" FontSize="18"/>
            <Label Text="{Binding TopTruthCount}" FontSize="18"/>
            <Image Source="{Binding TopTruthImage}" HeightRequest="100" WidthRequest="100"/>
            <Label Text="{Binding DrinkLabel}" FontSize="18"/>
            <Label Text="{Binding TopDrinkCount}" FontSize="18"/>
            <Image Source="{Binding TopDrinkImage}" HeightRequest="100" WidthRequest="100"/>
            <Button Text="Back to Main Menu" Command="{Binding ToMainMenuCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>