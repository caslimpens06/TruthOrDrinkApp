<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.WelcomePage"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <!-- Logo -->
            <Image
                x:Name="LogoImage"
                Source="logo.jpg"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="200" />

            <!-- Welcome label -->
            <Label Text="Welkom bij Truth Or Drink"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Buttons -->
            <Button Text="Maak Account" BackgroundColor="Black" TextColor="White" HeightRequest="50" Margin="0,10" Clicked="NavigateToSignup" />
            <Button Text="Speel als Host" BackgroundColor="Black" TextColor="White" HeightRequest="50" Margin="0,10" Clicked="NavigateToHost" />
            <Button Text="Speel als Deelnemer" BackgroundColor="Black" TextColor="White" HeightRequest="50" Margin="0,10" Clicked="NavigateToParticipant" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
